<!DOCTYPE html>
<html lang="ja">
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <nav class="navbar navbar-expend-lg navbar-dark bg-dark">
        <div class="container">
  
         <%= link_to "Bookers", root_path, class: "navbar-brand" %>
          <% if user_signed_in? %>
            <ul class="row">
              <li>
                <%= link_to "Home", user_path(current_user.id), class: "fas fa-home nav-link text-light" %>
              </li>
              <li>
                <%= link_to "Users", users_path, class: "fas fa-users nav-link text-light" %>
              </li>
              <li>
                <%= link_to "Books", books_path, class: "fas fa-book-open nav-link text-light" %>
              </li>
              <li>
                <%= link_to "logout", destroy_user_session_path, method: :delete, class: "fas fa-sign-out-alt nav-link text-light" %>
              </li>
            </ul>
  
            <% else %>
            <ul class="row">
                <li class="">
                    <%= link_to 'Home', "/", class: "fas fa-home nav-link text-light" %>
                  </li>
                  <li class="">
                    <%= link_to 'About', home_about_path, class: "fas fa-link nav-link text-light" %>
                  </li>
                  <li class="">
                    <%= link_to "sign up", new_user_registration_path, class: "fas fa-user-plus nav-link text-light" %>
                  </li>
                  <li class="">
                  <%= link_to "login", new_user_session_path, class: "fas fa-sign-in-alt nav-link text-light" %>
                </li>
              </ul>
  
          <% end %>
        </div>
      </nav>
      <div class="mx-auto" style="width: 500px;">
        <% if user_signed_in? %>
          <%= form_tag(search_path, method: :get) do %>
            <%= text_field_tag 'search[content]' %>
            <%= select_tag 'search[model]', options_for_select({ "User" => "user", "Book" => "book" }) %>
            <%= select_tag 'search[how]', options_for_select({ "完全一致" => "match", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partical"  }) %>
            <%= submit_tag '検索', class: "btn btn-primary" %>
          <% end %>
        <% end %>
      </div>
    </header>

    <main>
    <% flash.each do |message_type, message| %>
      <%= content_tag(:div, message, class: message_type) %>
    <% end %>

    <div class="container">
      <%= yield %>
      </div>
    </main>
    <footer>

      <p class="text-center" style="padding-top: 50px;">CopyRight Infratop.inc</p>

    </footer>

  </body>
</html>
