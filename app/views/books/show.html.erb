<%= render 'layouts/form3', user: @book.user ,book: @book_new %>
<div class="col-md-8 offset-md-1">
  <p id="notice">
  <h1>Book detail</h1>

  <table class="table">
  <tbody>
       <tr>
        <td><%= link_to user_path(@book.user_id) do %>
          <%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg", style: "width: 100px; height: 100px; margin-top: 20px;" %>
          <%= @book.user.name %> 
         <% end %></td>
         <td><%= link_to @book.title, book_path(@book.id) %></td>
         <td><%= @book.body %></td>
         <td>
          <% if @book.favorited_by?(current_user) %>
            <p>
              <%= link_to book_favorites_path(@book), method: :delete do %>
                ♥<%= @book.favorites.count %>
              <% end %>
            </p>
            <% else %>
            <p>
              <%= link_to book_favorites_path(@book), method: :post do %>
                ♡<%= @book.favorites.count %>
              <% end %>
            </p>
          <% end %>
         </td>
         <td>コメント数：<%= @book.book_comments.count %></td>
         
         <% if @book.user == current_user %>
           <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-default btn-block" %></td>
           <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-default btn-block" %></td>
         <% end %>
      </tr>
  </tbody>

  </table>

  <table class="comment">
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      
    </tr>      
    
   <tbody>
    <tr>
      <% @book.book_comments.each do |book_comment| %>
        <% book_comment_user = book_comment.user %>
        <td>
          <%= link_to user_path(book_comment.user) do %>
              <%= attachment_image_tag book_comment.user, :profile_image, fallback: "no_image.jpg", style: "width: 100px; height: 100px; margin-top: 20px;" %>
              <%= book_comment.user.name %>
          <% end %>
        </td>
        <td><%= book_comment.comment %></td>
        <% if current_user == book_comment_user  %>
          <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn-sm btn-danger" %></td>
        <% end %>
      <% end %>
        
        </tr>     
      
   </tbody>
  </table> 
  
<%= form_with(model:[@book, @book_comment], local: true) do |f| %>
  <div class="form-group has-icon">
    <label class="control-label sr-only" for="inputEmail">Title</label>
    <%= f.text_area :comment, autofocus: true, class:"form-control" %>  
  </div>
  <%= f.submit "送信", class:"btn btn-outline-secondary" %>
<% end %>  


</div>
</div>
</div>

