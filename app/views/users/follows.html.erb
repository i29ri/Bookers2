<h1>Follow users</h1>

 <table class="table">
   <tr>
     <th>image</th>
     <th>name</th>
     <th></th>
     <th></th>
     <th></th>
     <th></th>
   </tr>

   <tbody>
     <% @users.each do |user| %>
        <tr>
         <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %></td>
         <td><%= user.name %></td>
         <td><%= "フォロー数: #{user.followings.count}" %></td>
         <td><%= "フォロワー数: #{user.followers.count}" %></td>         
         <% if current_user != user %>
             <% if user.followed_by?(current_user) %>
                 <td><%=link_to "フォロー外す", user_relationships_path(user.id), method: :delete %></td>
             <% else %>
                 <td><%=link_to "フォローする", user_relationships_path(user.id), method: :post %></td>
             <% end %>
         <% else %>
          <td></td>
         <% end %>
         <td><%= link_to "Show", user_path(user.id) %></td>
       </tr>
     <% end %>
   </tbody>

 </table>